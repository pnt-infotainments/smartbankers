<p id="notice"><%= notice %></p>

<h1>Listing Post Types</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_types.each do |post_type| %>
      <tr>
        <td><%= post_type.title %></td>
        <td><%= post_type.description %></td>
        <td><%= link_to 'Show', administrator_post_type_path(post_type) %></td>
        <td><%= link_to 'Edit', edit_administrator_post_type_path(post_type) %></td>
        <td><%= link_to 'Destroy', administrator_post_type_path(post_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

